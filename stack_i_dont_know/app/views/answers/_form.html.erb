<h2>Add an Answer</h2>

<%= form_for([@question, @question.answers.build], remote: true) do |f| %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %><br>
  </p>

  <p>
    <%= f.label :content %><br>
    <%= f.text_area :content %><br>
  </p>

  <p>
    <%= f.submit "Submit" %>
  </p>
<% end %>

