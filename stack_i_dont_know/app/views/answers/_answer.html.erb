<div class="text-center" >
  <%= link_to 'Upvote', "/questions/#{answer.question_id}/answers/#{answer.id}/upvote", remote: true, method: :patch%>
  <span class="answer_vote" id= "<%=answer.id%>"> <%= answer.vote %> </span>
  <%= link_to 'Downvote', "/questions/#{answer.question_id}/answers/#{answer.id}/downvote", remote: true, method: :patch%>
</div>

<p class="text-center">
  <strong>Title:</strong>
  <%= answer.title %>
</p>

<p class="text-center">
  <strong>Content:</strong>
  <%= answer.content %>
</p><br>
