<h2>Question:</h2>
<h3><%= @question.title %></h3>
<%= @question.content %><br><br>

<div>
  <%= link_to "Answer This Question", new_question_answer_path(:question_id => @question.id) %> <br>
  <%= link_to "Delete This Question", question_path(@question), method: :delete, data: { confirm: 'Are you sure?' } %>

</div>

<h2>Answers:</h2>
<table>
  <%= render @question.answers %>
</table>
